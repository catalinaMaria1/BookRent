<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    >

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:hint="Title"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextTitle"
        android:layout_marginTop="10dp"
        android:hint="Author"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextAuthor"
        android:layout_marginTop="10dp"
        android:hint="Image URL"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextImage"
        android:layout_marginTop="10dp"
        android:hint="Description"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDescription"
        android:layout_marginTop="10dp"
        android:hint="Reviews"
        android:inputType="textMultiLine"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <EditText
        android:id="@+id/editTextEraseBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextReviews"
        android:layout_marginTop="10dp"
        android:hint="Book Name to Erase"
        android:inputType="text"
        android:padding="16dp"
        android:textSize="18sp"
        />

    <Button
        android:id="@+id/buttonEraseBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextEraseBook"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="125dp"
        android:text="Erase Book" />

    <Button
        android:id="@+id/buttonInsertBook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEraseBook"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="125dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="125dp"
        android:text="Insert Book" />

</RelativeLayout>

